<html>
<head>
<link rel="stylesheet" type="text/css" href="__PUBLIC__/css/position.css">
<meta charset="utf-8">
</head>
<body>
<!--header-->
<div class="header">
	<img id="title-img" src="__PUBLIC__/image/title.png">
    <!--导航-->
	<ul class="navigator">
        <li>首页</li>
        <li>人脉圈</li>
        <li>知名企业</li>
        <li>视频面试</li>
        <li>海归路上</li>
    </ul>
    <!--搜索-->
    <div class="search">
    	<img src="__PUBLIC__/image/blank.png" id="search-bg">
    	<input type="text" id="search-input">
    	<img src="__PUBLIC__/image/magnifying-glass.png" id="search-magnifying"><img src="__PUBLIC__/image/close.png" id="search-close">
    </div>
</div>
<div class="container" id="commend-resume">
	<div class="content">
    	<div class="left">
        	<ul class="menu">
            	<li>HR首页</li>
                <li>简历管理
                	<ul class="submenu">
                    	<li><label>新收到简历</label>
                        	<div id="new-resume">{$hrId|getnewresumenum}</div>
                        </li>
                        <li><label>待面试简历</label></li>
                        <li><label>推荐简历</label></li>
                        <li><label>搜索简历</label></li>
                        <li><label>我的收藏</label></li>
                        <li><label>已拒绝简历</label></li>
                    </ul>
                </li>
                <li>职位管理
                	<ul class="submenu">
                    	<li><label>发布新职位</label></li>
                        <li><label>已发布职位</label></li>
                        <li><label>已失效职位</label></li>
                    </ul>
                </li>
                <li>视频面试
                	<ul class="submenu">
                    	<li><label>预约日程</label></li>
                        <li><label>已面试</label></li>
                    </ul>
                </li>
                <li>企业主页</li>
                <li>控制面板</li>
            </ul>
        </div>
        <div class="right">
   	  		<div class="block" id="block-title">推荐简历</div>
            <form>
            	<div class="block">
                    <br>
                    <label class="lab-title">关键词	</label>
              		<input type="text">
                    <label class="lab-title">行业类别</label>
                    <input type="text">
                    <label class="pos-des">▶更多条件</label>
                    <input type="submit" value="搜索">
                    <br><br>
                </div>
                <div class="block">
                	<br><br>
                    <div class="commend-resume">
                    	<ul>
                            <foreach name='recommandResumeInfo' item='a'>
                        	<li>
                            	<div class="avatar">
                                	<div class="icon">
                                    	<img src="__PUBLIC__/image/icon1.png">
                                    </div>
                                    <div class="identity">
                                    	<div class="name">{$a.applicantname}</div>
                                       	<div class="job">{$a.jobname}</div>
                                    </div>
                                </div>
                                <div class="info">{:changesex($a.applicantsex)}  / {$a.jobname} / {$a.resumeaddress}</div>
                                <div class="exp">{$a.jobname} 3年</div>
                                <div class="view">
                                	<input type="submit" class="view-resume" value="查看简历">
                                </div>
                            </li>
                            </foreach>
                        </ul>
                    </div>
                    <br>
                    {$page}
                    <!-- <div class="page">
                    	<label class="page1">共 10 页</label>
                        <label class="page2">上一页</label>
                        <label class="page1">第 <input type="text" value="1"> 页</label>
                        <label class="page2">下一页</label>
                    </div> -->
                    <br><br>
            	</div>
            </form>
  		</div>
	</div>
</div>
<div class="tail" id="commend-resume-tail">
