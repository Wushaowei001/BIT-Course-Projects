unit Unit5;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls;

type
  T修改单词 = class(TForm)
    Label1: TLabel;
    要修改的单词: TEdit;
    词性: TEdit;
    释义: TEdit;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    Edit1: TEdit;
    Button1: TButton;
    Button2: TButton;
    Button3: TButton;
    procedure FormCloseQuery(Sender: TObject; var CanClose: Boolean);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  修改单词: T修改单词;

implementation

{$R *.dfm}

procedure T修改单词.FormCloseQuery(Sender: TObject; var CanClose: Boolean);
begin
if messagedlg('确定要退出吗？',mtwarning,[mbyes,mbno],0)=mryes then close;
end;

end.
