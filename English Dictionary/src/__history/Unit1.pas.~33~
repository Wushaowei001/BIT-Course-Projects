uses Unit2;
{$R *.dfm}

procedure T欢迎登录.登录Click(Sender: TObject);
begin

self.Hide;
管理员.Show;
//ShowMessage('用户名或密码错误！请重新输入');
end;

procedure T欢迎登录.退出Click(Sender: TObject);
begin
if messagedlg('确定要退出吗？',mtwarning,[mbyes,mbno],0)=mryes then close;
end;

end.
